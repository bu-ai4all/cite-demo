        function uploadFiles(formData) {
            $.ajax({
                url: '/upload',
                method: 'post',
                data: formData,
                processData: false,
                contentType: false,
                success: function(data) {
                    console.log('upload successful!');
                    changeImg(data);
                },
                error: (e) => {
                    console.log(e)
                }
            })
        }

